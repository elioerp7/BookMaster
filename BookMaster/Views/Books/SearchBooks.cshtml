
@model IEnumerable<BookMaster.Models.Book>

@{
    ViewBag.Title = "SearchBooks";
}

<h2>SearchBooks</h2>

<div class="jumbotron">
    @using (Html.BeginForm("SearchBooks", "Books", FormMethod.Get))
    {
        @Html.TextBox("search") <input type="submit" value="search" />
    }
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Genre
            </th>
            <th>
                ISBN
            </th>
            <th>
                Publisher
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No match any document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Genre</td>
                    <td>@item.ISBN</td>
                    <td>@item.Publisher</td>
                    <td>@item.Price</td>
                </tr>
            }
        }
    </tbody>
</table>
