
@model IEnumerable<BookMaster.Models.Book>

@{
    ViewBag.Title = "SearchBooks";
}


<br />
<br />

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3" style="color:red">
            No match any document
        </td>
    </tr>
}
<div class="row" height="220">
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-2 col-xs-5">
                <a href="ShowBook?field=@item.ISBN">
                    <div class="thumbnail hvr-grow">
                        <img src="@item.image">
                        <div class="caption">
                            <h5>@item.Title</h5>
                            <h6>
                                <a href="ShowAuthor?field=@item.Author">@item.Author</a>
                                <br />$@item.Price
                            </h6>
                            <p><a href="#" class="btn btn-primary" role="button">Add To Cart</a></p>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>